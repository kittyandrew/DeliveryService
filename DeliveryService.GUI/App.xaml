<Application x:Class="DeliveryService.GUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:DeliveryService.GUI.View"
             xmlns:viewmodels="clr-namespace:DeliveryService.GUI.ViewModel">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:CreateDeliveryViewModel}">
            <views:CreateDeliveryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:CancelDeliveryViewModel}">
            <views:CancelDeliveryView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:DisplayDeliveriesViewModel}">
            <views:DisplayDeliveryView/>
        </DataTemplate>
    </Application.Resources>
</Application>
